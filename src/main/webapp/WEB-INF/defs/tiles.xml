<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
  
  <!-- app 템플릿 레이아웃 -->
  <definition name="app" template="/WEB-INF/tiles/app/template.jsp">
    <put-attribute name="header" value="/WEB-INF/tiles/app/header.jsp"/>
    <put-attribute name="menu" value="/WEB-INF/tiles/app/menu.jsp"/>
    <put-attribute name="footer" value="/WEB-INF/tiles/app/footer.jsp"/>
  </definition>
  
  <definition name="*/*" extends="app">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    <put-attribute name="css.core.min" value="../../resources/assets/css/core.min.css"/>
    <put-attribute name="css.vendor_bundle.min" value="../../resources/assets/css/vendor_bundle.min.css"/>
    <put-attribute name="js.core.min" value="../../resources/assets/js/core.min.js"/>
  </definition>

  <!-- Tiles 제외 선언부 -->
  <definition name="auth/loginForm1" extends="empty">
    <put-attribute name="body" value ="/WEB-INF/views/auth/loginForm.jsp"/>
  </definition>
  <definition name="auth/findPassword" extends="empty">
    <put-attribute name="body" value ="/WEB-INF/views/auth/findPassword.jsp"/>
  </definition>
  <definition name="member/companyJoin" extends="empty">
    <put-attribute name="body" value ="/WEB-INF/views/member/companyJoin.jsp"/>
  </definition>
  <definition name="member/generalJoin" extends="empty">
    <put-attribute name="body" value ="/WEB-INF/views/member/generalJoin.jsp"/>
  </definition>
  
  
</tiles-definitions>