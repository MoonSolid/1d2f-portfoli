<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfoli.dao.NoticeDao">
	<resultMap type="Notice" id="Notice">
		<id column="board_no" property="number" /> <!-- 게시글번호 -->
		<id column="notice_no" property="noticeNumber" /><!-- 공지사항분류번호-->
    <id column="title" property="title" /><!-- 제목-->
    <id column="content" property="content" /><!-- 내용-->
    <id column="view_count" property="viewCount" /><!-- 조회수-->
    <id column="registered_date" property="registeredDate" /><!-- 등록일 -->
    <id column="attachment" property="attachment" /> <!-- 첨부파일 -->
	</resultMap>

  <insert id="insert" parameterType="PortfolioFile">
    INSERT INTO pf_portfolio_file (board_no, file_name, file_path)
    VALUES(#{boardNumber}, #{fileName}, #{filePath})
  </insert>


</mapper>







